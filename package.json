{
	"name": "@alfonz/async",
	"version": "0.0.1",
	"license": "MIT",
	"author": "Denis Alfonz Homol√≠k",
	"type": "module",
	"keywords": [
		"async",
		"concurrency"
	],
	"files": [
		"dist",
		"src"
	],
	"description": "A collection of useful async utilities",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./*": {
			"import": "./dist/*.js",
			"require": "./dist/*.cjs",
			"types": "./dist/*.d.ts",
			"default": "./dist/*"
		},
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts",
			"default": "./dist/index"
		}
	},
	"scripts": {
		"build": "tsc --noEmit && node ./build.mjs",
		"test:coverage": "jest --coverage",
		"lint": " prettier . --check && eslint .",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --collectCoverage=false"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@jest/globals": "^30.1.2",
		"@swc/core": "^1.13.5",
		"@swc/jest": "^0.2.39",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.15",
		"esbuild": "^0.25.4",
		"eslint": "^9.26.0",
		"fs-extra": "^11.3.0",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"ts-jest": "^29.3.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.0",
		"zx": "^8.5.3"
	}
}
